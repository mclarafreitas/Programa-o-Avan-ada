#include <stdio.h>

int main() {
  int valor;
  int *p1;
  float temp;
  float *p2;
  char aux;
  char *nome = "Ponteiros";
  char *p3;
  int idade;
  int vetor[3];
  int *p4;
  int *p5;

  /* (h) */
  vetor[0] = 31;
  vetor[1] = 45;
  vetor[2] = 27;
  p4 = vetor;
  idade = *p4;
  printf("%d \n", idade);
  /* (i) */
  p5 = p4 +1;
  idade = *p5;
  printf("%d \n", idade);
  /* (j) */
  p4 = p5 +1;
  idade = *p4;
  printf("%d \n", idade);
  /* (l) */
  p4 = p4 -2;
  idade = *p4;
  printf("%d \n", idade);
    /* (m) */
  p5 = &vetor[2] - 1;
  printf("%d \n", *p5);
  /* (n) */
  p5++;
  printf("%d \n", *p5);
  return(0);
}